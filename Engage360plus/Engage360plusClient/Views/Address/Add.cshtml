@model Engage360plusUI.Models.AddAddressViewModel
@{
}

<h1 class="mt-3">Add Address</h1>

<form method="post" class="mt-3">
    <div class="mt-3">
        <label class = "form-label">City</label>
        <input type="text" class="form-control" asp-for="City" />
    </div>
    <div class="mt-3">
        <label class = "form-label">Region</label>
        <input type="text" class="form-control" asp-for="Region" />
    </div>
    <div class="mt-3">
        <label class = "form-label">PostalCode</label>
        <input type="text" class="form-control" asp-for="PostalCode" />
    </div>
    <div class="mt-3">
        <label class = "form-label">Country</label>
        <input type="text" class="form-control" asp-for="Country" />
    </div>
    <div class="mt-3">
        <button type="submit" class = "btn btn-primary">Save</button>
    </div>
</form>
