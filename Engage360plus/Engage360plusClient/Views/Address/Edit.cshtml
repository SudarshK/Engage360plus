@model Engage360plusUI.Models.DTO.AddressDto

@{
}

<h1 class="mt-3">Edit</h1>
@if (Model is not null)
{
    <form method = "post" class="mt-3">
        <div class="mt-3">
            <label class = "form-label">ID</label>
            <input type = "text" class="form-control" asp-for="Id" readonly/>
        </div><div class="mt-3">
            <label class = "form-label">City</label>
            <input type = "text" class="form-control" asp-for="City" />
        </div>
        <div class="mt-3">
            <label class = "form-label">Region</label>
            <input type = "text" class="form-control" asp-for="Region" />
        </div>
        <div class="mt-3">
            <label class = "form-label">PostalCode</label>
            <input type = "text" class="form-control" asp-for="PostalCode" />
        </div>
        <div class="mt-3">
            <label class = "form-label">Country</label>
            <input type = "text" class="form-control" asp-for="Country" />
        </div>
        <div class="mt-3" d-flex justify-content-between>
            <button type = "submit" class = "btn btn-primary">Save</button>
        
            <button type = "submit" asp-controller="Address" asp-action="Delete" class = "btn btn-danger">Delete</button>
        </div>
    </form>
}